{
  "name": "anydm",
  "private": true,
  "version": "0.0.1",
  "description": "AnyDM",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "clean": "rm -rf node_modules bun.lock && bun run ui:clean",
    "reinstall": "bun run clean && bun install",
    "fmt": "prettier --write .",
    "ui:clean": "cd apps/ui && rm -rf node_modules",
    "ui:fmt": "cd apps/ui && bun run fmt",
    "ui:dev": "cd apps/ui && bun run dev",
    "ui:build": "cd apps/ui && bun run build",
    "ui:restart": "bun run reinstall && bun run ui:dev"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  }
}
